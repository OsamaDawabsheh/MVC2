@model User

@{
    Layout = "_AuthLayout";
}

<section class="w-25 bg-dark text-light rounded-3 p-5 mt-5 ">
    <h1 class="text-center mb-5">Login</h1>

    <form class="d-flex flex-column gap-4" asp-controller="Users" asp-action="Login">
        @if (ViewBag.error != null) {
        <p class="bg-light text-danger p-2 fw-bold text-center">@ViewBag.error</p>
        }
    
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success mt-4">Login</button>
    </form>
    </section>